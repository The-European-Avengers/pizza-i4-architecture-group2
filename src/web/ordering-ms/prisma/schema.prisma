generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id      String @id @default(uuid())
  user_id String
  status  String

  pizzas Order_Pizza[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt


  total_price Decimal @default(0)

}

model Pizza {
  id    String @id @default(uuid())
  name  String
  
  unit_price Float @default(10)

  recipe    Recipe @relation(fields: [id_recipe], references: [id])
  id_recipe String @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  orders Order_Pizza[]
}

model Order_Pizza {
  order Order @relation(fields: [id_order], references: [id])
  pizza Pizza @relation(fields: [id_pizza], references: [id])

  id_order String
  id_pizza String

  quantity Int

  @@id([id_order, id_pizza])
}

model Recipe {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  pizza       Pizza?
  ingredients Recipe_Ingredient[]
}

model Recipe_Ingredient {
  recipe     Recipe     @relation(fields: [id_recipe], references: [id])
  ingredient Ingredient @relation(fields: [id_ingredient], references: [id])

  id_recipe     String
  id_ingredient String

  quantity Float

  @@id([id_recipe, id_ingredient])
}

model Ingredient {
  id                 String              @id @default(uuid())
  name               String
  created_at         DateTime            @default(now())
  updated_at         DateTime            @updatedAt
  recipe_ingredients Recipe_Ingredient[]
}
